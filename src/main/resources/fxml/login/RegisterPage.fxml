<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.Scene?>
<?import javafx.scene.text.*?>
<Scene xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/10.0.2-internal"
       fx:controller="graphic.login.RegisterPage">
    <AnchorPane prefHeight="400.0" prefWidth="600.0" stylesheets="@../../Others/Stylesheet.css">
        <TextField fx:id="username" layoutX="97.0" layoutY="5.0" prefHeight="55.0" prefWidth="236.0"
                   promptText="Username" AnchorPane.leftAnchor="97.0">
            <font>
                <Font size="18.0"/>
            </font>
        </TextField>
        <TextField fx:id="firstName" layoutX="97.0" layoutY="178.0" prefHeight="55.0" prefWidth="236.0"
                   promptText="First Name" AnchorPane.leftAnchor="97.0">
            <font>
                <Font size="18.0"/>
            </font>
        </TextField>
        <TextField fx:id="lastName" layoutX="97.0" layoutY="236.0" prefHeight="55.0" prefWidth="236.0"
                   promptText="Last Name" AnchorPane.leftAnchor="97.0">
            <font>
                <Font size="18.0"/>
            </font>
        </TextField>
        <TextField fx:id="email" layoutX="97.0" layoutY="293.0" prefHeight="55.0" prefWidth="236.0" promptText="Email"
                   AnchorPane.leftAnchor="97.0">
            <font>
                <Font size="18.0"/>
            </font>
        </TextField>
        <TextField fx:id="companyName" layoutX="97.0" layoutY="380.0" prefHeight="55.0" prefWidth="236.0"
                   promptText="Company Name" AnchorPane.leftAnchor="97.0">
            <font>
                <Font size="18.0"/>
            </font>
        </TextField>
        <TextArea fx:id="companyInfo" layoutX="97.0" layoutY="442.0" prefHeight="240.0" prefWidth="289.0"
                  promptText="Company Info" AnchorPane.leftAnchor="97.0">
            <font>
                <Font size="17.0"/>
            </font>
        </TextArea>
        <RadioButton fx:id="customerButton" layoutX="108.0" layoutY="351.0" mnemonicParsing="false" prefHeight="20.0"
                     prefWidth="85.0" selected="true" text="Customer">
