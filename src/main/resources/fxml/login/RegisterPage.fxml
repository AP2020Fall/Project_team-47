                <Font size="14.0"/>
            </font>
            <toggleGroup>
                <ToggleGroup fx:id="type"/>
            </toggleGroup>
        </RadioButton>
        <RadioButton fx:id="sellerButton" layoutX="212.0" layoutY="352.0" mnemonicParsing="false" prefHeight="20.0"
                     prefWidth="91.0" text="Seller" toggleGroup="$type">
            <font>
                <Font size="14.0"/>
            </font>
        </RadioButton>
        <RadioButton fx:id="managerButton" layoutX="306.0" layoutY="352.0" mnemonicParsing="false" prefHeight="20.0"
                     prefWidth="91.0" text="Manager" toggleGroup="$type">
            <font>
                <Font size="14.0"/>
            </font>
        </RadioButton>
        <Button fx:id="regButton" layoutX="670.0" layoutY="71.0" mnemonicParsing="false" onAction="#register"
                prefHeight="64.0" prefWidth="231.0" text="Register" AnchorPane.leftAnchor="670.0">
            <font>
                <Font size="16.0"/>
            </font>
        </Button>
        <Text fx:id="error" fill="RED" layoutX="479.0" layoutY="656.0" strokeType="OUTSIDE" strokeWidth="0.0"
              text="Error" wrappingWidth="450.9368591308594">
            <font>
                <Font size="18.0"/>
            </font>
        </Text>
        <TextField fx:id="verificationCode" layoutX="669.0" layoutY="272.0" prefHeight="55.0" prefWidth="236.0"
                   promptText="Verification Code">
            <font>
                <Font size="18.0"/>
            </font>
        </TextField>
        <Button fx:id="confirm" layoutX="677.0" layoutY="363.0" mnemonicParsing="false" onAction="#confirm"
                prefHeight="64.0" prefWidth="231.0" text="Confirm" AnchorPane.leftAnchor="670.0">
            <font>
                <Font size="16.0"/>
            </font>
        </Button>
        <Button layoutX="679.0" layoutY="571.0" mnemonicParsing="false" onAction="#back" prefHeight="64.0"
                prefWidth="231.0" text="Back" AnchorPane.leftAnchor="670.0">
            <font>
                <Font size="16.0"/>
            </font>
        </Button>
        <TextField fx:id="phoneNumber" layoutX="97.0" layoutY="121.0" prefHeight="55.0" prefWidth="236.0"
                   promptText="Phone Number" AnchorPane.leftAnchor="97.0">
            <font>
                <Font size="18.0"/>
            </font>
        </TextField>
        <PasswordField fx:id="password" layoutX="98.0" layoutY="66.0" prefHeight="51.0" prefWidth="236.0"
                       promptText="Password">
            <font>
                <Font size="18.0"/>
            </font>
        </PasswordField>
        <Button fx:id="picButton" layoutX="413.0" layoutY="71.0" mnemonicParsing="false" onAction="#choosePic"
                prefHeight="64.0" prefWidth="231.0" text="Choose Pic">
            <font>
                <Font size="16.0"/>
            </font>
        </Button>
    </AnchorPane>
</Scene>
